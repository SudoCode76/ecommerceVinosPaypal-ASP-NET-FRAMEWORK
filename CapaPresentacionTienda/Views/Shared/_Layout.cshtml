<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Vinos Ecommerce</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Incluir Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@200&display=swap" rel="stylesheet">

    <style>
        body {
            background-color: black;
            font-family: 'Oswald', Arial, Tahoma, Verdana;
        }

        .nav-link:hover {
            color: #b20932 !important;
        }

        .btn-outline-light:hover {
            background-color: #b20932 !important;
            border-color: #b20932 !important;
            color: #fff !important;
        }

        .tituloMenu {
            color: #b20932 !important
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgba%28255, 255, 255, 1%29' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold text-uppercase tituloMenu" href="#!">Vino Ecommerce</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link text-light" href="@Url.Action("Index","Tienda")">Inicio</a></li>
                    <li class="nav-item"><a class="nav-link text-light" href="@Url.Action("Categoria","Tienda")">Categorias</a></li>
                    <li class="nav-item"><a class="nav-link text-light" href="@Url.Action("Productos","Tienda")">Productos</a></li>
                    <li class="nav-item"><a class="nav-link text-light" href="@Url.Action("Contacto","Tienda")">Contacto</a></li>
                    <li class="nav-item"><a class="nav-link text-light" href="@Url.Action("Nosotros","Tienda")">Nosotros</a></li>
                    <li class="nav-item"><a class="nav-link text-light" href="@Url.Action("Test","Tienda")">Test</a></li>
                </ul>
                <form class="d-flex align-items-center">
                    @if (Session["Cliente"] == null)
                    {
                        // CLIENTE NO HA INICIADO SESION
                        <a class="btn btn-outline-light" aria-current="page" href="@Url.Action("Index","Acceso")"><i class="fas fa-house-user me-1"></i> Iniciar Sesi&oacute;n</a>
                    }
                    else
                    {
                        // CLIENTE HA INICIADO SESION
                        <a class="btn btn-outline-light btn-sm me-2" href="@Url.Action("Carrito","Tienda")">
                            <i class="fas fa-shopping-cart me-1"></i>
                            Mi Carrito
                            <span class="badge bg-light text-dark ms-1" id="cantidadcarrito">0</span>
                        </a>
                        <ul class="navbar-nav ms-auto me-0 me-md-3 my-2 my-md-0">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw text-light"></i></a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="#">@User.Identity.Name</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("MisCompras","Tienda")">Mis Compras</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item" href="@Url.Action("CerrarSesion","Acceso")">Cerrar Sesi&oacute;n</a></li>
                                </ul>
                            </li>
                        </ul>
                    }
                </form>
            </div>
        </div>
    </nav>

    @RenderBody()

    <footer>
        <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        $(document).ready(function () {
            MostrarCantidadCarrito();
        });
        // MOSTRAR CANTIDAD DE PRODUCTOS AGREGADOS EN EL CARRITO DE COMPRAS
        function MostrarCantidadCarrito() {
            if ($("#cantidadcarrito").length > 0) {
                jQuery.ajax({
                    url: '@Url.Action("CantidadEnCarrito","Tienda")',
                    type: 'get',
                    dataType: 'json',
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        $("#cantidadcarrito").text(data.cantidad);
                    }
                });
            }
        }
    </script>

</body>
</html>

