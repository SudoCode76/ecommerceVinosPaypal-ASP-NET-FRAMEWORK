@model IEnumerable<CapaEntidad.Venta>

@{
    ViewBag.Title = "ListaVentas";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<h2 class="h3 mb-2 text-gray-800">Lista de Ventas</h2>
<p class="mb-4">Listado de venas registradas en el sistema. Puede buscar y ordenar los datos utilizando la tabla interactiva.</p>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Lista de Categorías</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.NombreCliente)</th>
                        <th>@Html.DisplayNameFor(model => model.TotalProducto)</th>
                        <th>@Html.DisplayNameFor(model => model.MontoTotal)</th>
                        <th>@Html.DisplayNameFor(model => model.Contacto)</th>
                        <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                        <th>@Html.DisplayNameFor(model => model.Direccion)</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.NombreCliente)</th>
                        <th>@Html.DisplayNameFor(model => model.TotalProducto)</th>
                        <th>@Html.DisplayNameFor(model => model.MontoTotal)</th>
                        <th>@Html.DisplayNameFor(model => model.Contacto)</th>
                        <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                        <th>@Html.DisplayNameFor(model => model.Direccion)</th>
                        <th>Acciones</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th>@Html.DisplayFor(modelItem => item.NombreCliente)</th>
                            <th>@Html.DisplayFor(modelItem => item.TotalProducto)</th>
                            <th>@Html.DisplayFor(modelItem => item.MontoTotal)</th>
                            <th>@Html.DisplayFor(modelItem => item.Contacto)</th>
                            <th>@Html.DisplayFor(modelItem => item.Telefono)</th>
                            <th>@Html.DisplayFor(modelItem => item.Direccion)</th>
                            <td class="text-center">
                                <a href="@Url.Action("DetalleVenta", "Ventas", new { id = item.IdVenta })" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <a href="@Url.Action("Eliminar", "Ventas", new { id = item.IdVenta })" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
