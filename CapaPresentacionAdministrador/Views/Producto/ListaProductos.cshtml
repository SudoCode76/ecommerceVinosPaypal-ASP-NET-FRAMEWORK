@model IEnumerable<CapaEntidad.Producto>

@{
    ViewBag.Title = "ListaProductos";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>Lista de Productos</h2>
<link href="~/Content/Site.css" rel="stylesheet" />

<div style="text-align: right" class="form-inline">

    <a href="Registrar" class="btn btn-primary"><span class="glyphicon glyphicon-pencil"> Registrar</span></a>

</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stock)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.oCategoria) <!-- Mostrar descripción de la categoría -->
        </th>
        <th>
            @Html.DisplayNameFor(model => model.oMarca) <!-- Mostrar descripción de la marca -->
        </th>
        <th>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.oCategoria.Descripcion) <!-- Mostrar descripción de la categoría -->
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.oMarca.Descripcion) <!-- Mostrar descripción de la marca -->
            </td>
            <td style="text-align: center">

                <button class="btn btn-default" type="button" id="btn_act" name="btn_act" onclick="location.href = '../Producto/Editar?Id=@item.IdProducto'"><span class="glyphicon glyphicon-edit"> Editar</span></button>
                <button class="btn btn-danger" type="button" id="btn_eli" name="btn_eli" onclick="location.href='../Producto/Eliminar?id=@item.IdProducto'"><span class="glyphicon glyphicon-trash"> Eliminar</span></button>
            </td>
        </tr>
    }

</table>
